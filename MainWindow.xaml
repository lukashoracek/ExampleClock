<Window x:Class="ExampleClock.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExampleClock"
        mc:Ignorable="d"
        Title="Example C# analog clock" Height="500" Width="500">
    <Grid Height="500">
        <CheckBox x:Name="SmoothSecondHandCheckbox" Content="Smooth second hand" Margin="10,10,-10,-10" Checked="CheckBox_CheckedChanged" Unchecked="CheckBox_CheckedChanged" />
        <local:Clock x:Name="Clock" Margin="-10,45,10,-45" />
    </Grid>
</Window>
